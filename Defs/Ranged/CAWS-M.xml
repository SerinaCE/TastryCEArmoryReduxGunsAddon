<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	
	<!-- == CAWS-M === -->
		
  <ThingDef ParentName="BaseMakeableGun">		
	<defName>TA_CAWS-M</defName>
	<label>CAWS-M Tactical automatic shotgun</label>
	  <description>A bullpup automatic military shotgun, accepting standard 12-gauge shells but designed for proprietary higher-power shells. Utilizes a box magazine, and is fitted with a holographic sight and flashlight for close-ranged combat.</description>
    <soundInteract>Interact_Shotgun</soundInteract>
    <graphicData>
      <texPath>Weapons/Ranged/TA_CAWS-M</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>37500</WorkToMake>
      <SightsEfficiency>1.0</SightsEfficiency>
      <ShotSpread>0.08</ShotSpread>
      <SwayFactor>1.13</SwayFactor>
      <Bulk>7.62</Bulk>
      <Mass>4.4</Mass>
      <RangedWeapon_Cooldown>0.39</RangedWeapon_Cooldown>
			<NightVisionEfficiency_Weapon>0.4</NightVisionEfficiency_Weapon>
    </statBases>
    <costList>
      <Steel>55</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
      <Chemfuel>10</Chemfuel>
    </costList>
    <weaponTags Inherit="False">
        <li>CE_AI_BROOM</li>
        <li>REP_BW_SG</li>
    </weaponTags>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.05,1.05</DrawSize>
        <DrawOffset>0.15,0.05</DrawOffset>
      </li>
    </modExtensions>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <recoilAmount>2.84</recoilAmount>
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_12GaugeBelted_TungstenBuck</defaultProjectile>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <warmupTime>0.6</warmupTime>
        <range>23</range>
        <soundCast>Shot_Shotgun_NoRack</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>15</magazineSize>
        <reloadTime>4.5</reloadTime>
        <ammoSet>AmmoSet_12GaugeBelted</ammoSet>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiUseBurstMode>TRUE</aiUseBurstMode>
        <aiAimMode>Snapshot</aiAimMode>
        <aimedBurstShotCount>2</aimedBurstShotCount>
      </li>
    </comps>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>muzzle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
      </li>
    </tools>
  </ThingDef>  

</Defs>